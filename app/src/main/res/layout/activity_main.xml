<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.olympiabardis.quizapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.olympiabardis.quizapp.MainActivity">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_Canada"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WORLD CAPITALS QUIZ!"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#003333"
                android:id="@+id/title_text_view"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#003333"
                android:text="1. What is the capital of Canada?"
                android:id="@+id/Canada_text_view"
                android:paddingBottom="10dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Montreal"
                android:id="@+id/radio_montreal"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ottowa"
                android:id="@+id/radio_Ottowa"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toronto"
                android:id="@+id/radio_toronto"
                android:checked="false" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_India"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_Canada"
            android:layout_alignRight="@+id/rg_Canada"
            android:layout_alignEnd="@+id/rg_Canada">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#003333"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="2. New Dehli is the capital of which country?"
                android:id="@+id/India_text_view"
                android:layout_below="@id/title_text_view" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India"
                android:id="@+id/radio_India"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mexico"
                android:id="@+id/radio_Mexico"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Germany"
                android:id="@+id/radio_Germany"
                android:checked="false" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_SouthAmerica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_India">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#003333"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="3. Select capitals in South America:"
                android:id="@+id/SouthAmerica_text_view"
                android:layout_below="@id/title_text_view" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santiago"
                android:id="@+id/checkBox_Santiago" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lima"
                android:id="@+id/checkBox_Lima" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris"
                android:id="@+id/checkBox_Paris" />

        </RadioGroup>

           <EditText
                android:id="@+id/Italy_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@+id/rg_SouthAmerica"
                android:hint="4. Name the capital of Italy " />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Submit"
            android:id="@+id/button"
            android:onClick="gradeQuiz"
            android:layout_below="@+id/rg_SouthAmerica"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp" />

    </RelativeLayout>
</ScrollView>